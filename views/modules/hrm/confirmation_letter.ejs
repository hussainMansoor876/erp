<script>
    var employees = [];

    function load() {
        $.get('/modules/get_employees', function (data) {
            employees = data.employees;
            console.log(data);
        })
    }
    load();

    function printDiv(divName) {
        var printContents = divName.innerHTML;
        var originalContents = document.body.innerHTML;

        document.body.innerHTML = printContents;
        footer.style.display = "block"

        window.print();

        document.body.innerHTML = originalContents;
        footer.style.display = "none"
    }

    function foot(footer) {
        footer.style.display = "none"
    }

    function search_result(e) {
        if (e.value.length == 0) {
            document.getElementById('search_list').innerHTML = "";
            document.getElementById("search_list").style.border = "0px";
            return
        }
        let str = '<div style="max-height:8em;overflow:scroll"><ul>';
        employees.forEach((p) => {
            console.log(p.name)
            if (p.name.toLowerCase().indexOf(e.value.toLowerCase()) !== -1) {
                str += `<li ><button class="btn btn-primary" onClick="fetch('` + p._id + `')">` + p.name + `</button></li>`
            }
        });
        str += '</ul></div>'
        console.log(str);
        document.getElementById('search_list').innerHTML = '';
        document.getElementById('search_list').innerHTML = str;
        document.getElementById("search_list").style.border = "1px";
        console.log(e.value);

    }

    function fetch(id) {
        //      alert(id);
        var today = new Date();
        var dd = today.getDate();
        var mm = today.getMonth() + 1; //January is 0!
        var yyyy = today.getFullYear();

        if (dd < 10) {
            dd = '0' + dd
        }

        if (mm < 10) {
            mm = '0' + mm
        }

        today = mm + '/' + dd + '/' + yyyy;
        employees.forEach((p) => {
            if (p._id === id) {
                document.getElementById('name').innerHTML = p.name;
                document.getElementById('designation').innerHTML = p.designation;
                document.getElementById('department').innerHTML = p.dept;
                document.getElementById('date').innerHTML = today;
                // document.getElementById('mobile').innerHTML = p.mobile;
                // document.getElementById('picture').src = '../../assets/pictures/' + p.picture;
                // document.getElementById('p_name').value = p.name;
                // document.getElementById('p_name').value = p.name;
                // document.getElementById('p_name').value = p.name;

            }
        })
    }
